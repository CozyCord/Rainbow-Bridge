<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <stack-layout id="roster-screen">
            <children>
                <texture texture="rainbowbridge:textures/gui/book_spread.png"
                    texture-width="292" texture-height="180"
                    region-width="292" region-height="180">
                </texture>
                <flow-layout direction="horizontal">
                    <children>
                        <!-- Left Page -->
                        <flow-layout direction="vertical">
                            <children>
                                <!-- Default Home position -->
                                <flow-layout direction="horizontal">
                                    <children>
                                        <texture
                                            id="default-home-icon"
                                            texture="rainbowbridge:textures/gui/default_home_icon.png"
                                            texture-width="12" texture-height="12"
                                            region-width="12" region-height="12"
                                        >
                                            <tooltip-text>Default home location</tooltip-text>
                                        </texture>
                                        <label id="default-home-label">
                                            <margins>
                                                <left>2</left>
                                                <top>2</top>
                                            </margins>
                                        </label>
                                    </children>
                                </flow-layout>

                                <!-- Pet list -->
                                <scroll direction="vertical">
                                    <flow-layout id="pet-list" direction="vertical">
                                        <children>
                                            <!-- To be populated programmatically -->
                                        </children>

                                        <sizing>
                                            <horizontal method="fill">100</horizontal>
                                        </sizing>
                                    </flow-layout>

                                    <scrollbar>
                                        <flat>#72331f</flat>
                                    </scrollbar>

                                    <sizing>
                                        <vertical method="fixed">
                                            114
                                        </vertical>
                                    </sizing>
                                    <allow-overflow>true</allow-overflow>
                                    <margins>
                                        <top>16</top>
                                    </margins>
                                </scroll>

                            </children>

                            <sizing>
                                <horizontal method="fill">50</horizontal>
                            </sizing>

                            <padding>
                                <all>10</all>
                                <right>18</right>
                            </padding>
                            <margins>
                            </margins>
                        </flow-layout>

                        <!-- Right Page -->
                        <flow-layout direction="vertical">

                            <children>

                                <!-- Close Button -->
                                <button id="close-button">
                                    <renderer>
                                        <texture u="0" v="0"
                                            texture="rainbowbridge:textures/gui/close_button.png"
                                            texture-width="11" texture-height="22" />
                                    </renderer>
                                    <sizing>
                                        <horizontal method="fixed">11</horizontal>
                                        <vertical method="fixed">11</vertical>
                                    </sizing>
                                    <positioning type="relative">
                                        <relative>100,0</relative>
                                    </positioning>
                                    <margins>
                                        <bottom>0</bottom>
                                        <right>0</right>
                                    </margins>

                                </button>

                                <!-- Name -->
                                <label id="pet-name-label">

                                    <margins>
                                        <top>15</top>
                                        <left>12</left>
                                    </margins>

                                    <sizing>
                                        <vertical method="fixed">10</vertical>
                                    </sizing>

                                    <max-width>97</max-width>
                                </label>

                                <!-- Entity box / buttons -->
                                <flow-layout direction="horizontal">
                                    <children>
                                        <stack-layout id="entity-box-container">
                                            <children>
                                                <!-- To be rendered programmatically -->
                                            </children>
                                            <sizing>
                                                <horizontal method="fixed">50</horizontal>
                                                <vertical method="fixed">50</vertical>
                                            </sizing>
                                            <margins>
                                                <top>6</top>
                                                <left>4</left>
                                            </margins>
                                        </stack-layout>

                                        <flow-layout direction="vertical" id="command-buttons">
                                            <children>
                                                <!-- Summon button -->
                                                <button id="summon-button">
                                                    <sizing>
                                                        <horizontal method="fixed">42</horizontal>
                                                        <vertical method="fixed">21</vertical>
                                                    </sizing>
                                                    <renderer>
                                                        <texture u="0" v="0"
                                                            texture="rainbowbridge:textures/gui/command_buttons.png"
                                                            texture-width="84" texture-height="63" />
                                                    </renderer>
                                                    <margins>
                                                        <bottom>4</bottom>
                                                    </margins>
                                                </button>

                                                <!-- Send home button -->
                                                <button id="home-button">
                                                    <sizing>
                                                        <horizontal method="fixed">42</horizontal>
                                                        <vertical method="fixed">21</vertical>
                                                    </sizing>
                                                    <renderer>
                                                        <texture u="42" v="0"
                                                            texture="rainbowbridge:textures/gui/command_buttons.png"
                                                            texture-width="84" texture-height="63" />
                                                    </renderer>
                                                </button>

                                            </children>

                                            <margins>
                                                <top>8</top>
                                                <left>8</left>
                                            </margins>
                                        </flow-layout>

                                    </children>
                                </flow-layout>

                                <!-- Current position -->
                                <flow-layout direction="horizontal">
                                    <children>
                                        <texture
                                            id="pet-position-icon"
                                            texture="rainbowbridge:textures/gui/pos_icon.png"
                                            texture-width="8" texture-height="10"
                                            region-width="8" region-height="10"
                                        >
                                            <tooltip-text>Current position</tooltip-text>
                                        </texture>
                                        <label id="pet-position-label">
                                            <margins>
                                                <left>2</left>
                                                <top>2</top>
                                            </margins>
                                        </label>
                                    </children>
                                    <margins>
                                        <top>7</top>
                                        <left>5</left>
                                    </margins>
                                    <padding>
                                        <left>1</left>
                                    </padding>
                                </flow-layout>

                                <!-- Home position -->
                                <flow-layout direction="horizontal">
                                    <children>
                                        <texture
                                            id="home-icon"
                                            texture="rainbowbridge:textures/gui/home_icon.png"
                                            texture-width="10" texture-height="10"
                                            region-width="10" region-height="10"
                                        >
                                            <tooltip-text>Home location</tooltip-text>
                                        </texture>
                                        <label id="home-position-label">
                                            <margins>
                                                <left>2</left>
                                                <top>2</top>
                                            </margins>
                                        </label>
                                    </children>
                                    <margins>
                                        <top>2</top>
                                        <left>5</left>
                                    </margins>
                                </flow-layout>

                                <!-- No pets found text -->
                                <label id="no-pets-message">
                                    <text>You haven't registered any pets yet. Equip a Collar on a pet to register it.</text>
                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                    </sizing>
                                    <margins>
                                        <top>12</top>
                                    </margins>
                                </label>

                            </children>
                            <sizing>
                                <horizontal method="fill">50</horizontal>
                            </sizing>
                            <padding>
                                <left>10</left>
                            </padding>
                            <margins>
                                <top>4</top>
                            </margins>
                            <allow-overflow>false</allow-overflow>
                        </flow-layout>
                    </children>
                    <sizing>
                        <horizontal method="fixed">292</horizontal>
                        <vertical method="fixed">190</vertical>
                    </sizing>
                    <positioning type="relative">50,50</positioning>
                    <padding>
                        <all>16</all>
                        <top>4</top>
                    </padding>
                </flow-layout>
            </children>
            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>
        </stack-layout>
    </components>
    <templates>
        <template name="entity-box-template">
            <entity id="entity-box" type="{{selected_pet_type}}">
                <look-at-cursor>true</look-at-cursor>
                <scale-to-fit>true</scale-to-fit>
                <sizing>
                    <horizontal method="fixed">24</horizontal>
                    <vertical method="fixed">24</vertical>
                </sizing>
                <margins>
                    <bottom>8</bottom>
                </margins>
            </entity>
        </template>
    </templates>
</owo-ui>